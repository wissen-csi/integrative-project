<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prototype.controller.PersonController" alignment="TOP_CENTER" spacing="10" styleClass="equipment-root" stylesheets="@../../styles.css">

    <children>

        <!-- TÍTULO -->
        <Label prefHeight="30.0" alignment="TOP_CENTER" prefWidth="549.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" styleClass="equip-title" stylesheets="@../../styles.css" text="GESTION DE PERSONAS" />
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <GridPane hgap="10" vgap="10" prefHeight="264.0" prefWidth="500.0"
                          styleClass="form-box"
                          stylesheets="@../../Stylesview.css">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <!-- ID -->
                        <Label text="ID:" styleClass="form-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="idTextField"
                                   promptText="ID (para buscar, actualizar, eliminar)"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <!-- NOMBRE COMPLETO -->
                        <Label fx:id="fullNameLabel"
                               text="Nombre Completo:"
                               styleClass="form-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fullNameTextField"
                                   promptText="Nombre Completo"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <!-- DOCUMENTO -->
                        <Label fx:id="documentLabel"
                               text="Documento De Identidad:"
                               styleClass="form-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="documentTextField"
                                   promptText="Documento de identidad"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <!-- ROL -->
                        <Label fx:id="personRoleLabel"
                               text="Rol Que Desempeña:"
                               styleClass="form-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="personRoleComboBox"
                                  prefWidth="150.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                </GridPane>
            </children>
        </HBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="10" styleClass="person-root" stylesheets="@../../styles.css">
            <children>
                <Button onAction="#handleCreate" styleClass="equip-button" text="Crear" />
                <Button fx:id="updateButton" onAction="#handleUpdate" styleClass="equip-button" text="Actualizar" />
                <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="equip-button" text="Eliminar" />
                <Button fx:id="findByIdButton" onAction="#handleSearch" styleClass="equip-button" text="Buscar por ID" />
                <Button fx:id="cleanFormButton" onAction="#handleClear" styleClass="equip-button" text="Limpiar Formulario" />
            </children>
        </HBox>

        <!-- ESTADO -->
        <Label fx:id="statusLabel" style="-fx-text-fill: blue; -fx-padding: 5;" />

        <!-- TABLA -->
        <TableView fx:id="personTable" styleClass="table-row-cell" stylesheets="@../../styles.css" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                <TableColumn fx:id="fullNameColumn" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="documentColumn" prefWidth="100" text="Doc. Identidad" />
                <TableColumn fx:id="roleColumn" prefWidth="100" text="Rol" />
            </columns>
        </TableView>

    </children>
</VBox>
