<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainMenuBorderPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prototype.controller.MainMenuController">

    <!-- LADO IZQUIERDO: Menú de Navegación -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="491.0" prefWidth="227.0" spacing="10" styleClass="menu-root" stylesheets="@../../styles.css">
            <Label styleClass="menu-title" stylesheets="@../../styles.css" text="MENU PRINCIPAL">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <ImageView fitHeight="148.0" fitWidth="211.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../icons/universidad.jpg" />
                </image>
            </ImageView>

            <Button fx:id="manageEquipmentsButton" onAction="#loadEquipmentView" prefHeight="20.0" prefWidth="187.0" styleClass="menu-button" stylesheets="@../../styles.css" text="Gestionar Equipos">
            <font>
               <Font size="14.0" />
            </font></Button>
            <Button fx:id="managePersonsButton" onAction="#loadPersonsView" prefHeight="25.0" prefWidth="186.0" styleClass="menu-button" stylesheets="@../../styles.css" text="Gestionar  Personas">
            <font>
               <Font size="14.0" />
            </font></Button>
            <Button fx:id="managEntriesRequestsButton" onAction="#loadRequestView" prefHeight="25.0" prefWidth="183.0" styleClass="menu-button" stylesheets="@../../styles.css" text="Gestionar Ingresos y Egresos">
            <font>
               <Font size="14.0" />
            </font></Button>
         <Button fx:id="manageProvidersButton" layoutX="34.0" layoutY="286.0" onAction="#loadProviderView" prefHeight="23.0" prefWidth="187.0" styleClass="menu-button" stylesheets="@../../styles.css" text="Gestonar Proveedores">
            <font>
               <Font size="14.0" />
            </font></Button>
            <Button fx:id="exitButton" onAction="#loadExitFunction" prefHeight="11.0" prefWidth="184.0" styleClass="menu-button" stylesheets="@../../styles.css" text="Salir">
            <font>
               <Font size="14.0" />
            </font></Button>
        </VBox>
    </left>

    <!-- CENTRO: Área de Contenido Dinámico -->
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20" styleClass="home-root" stylesheets="@../../styles.css">
            <Label styleClass="home-title" stylesheets="@../../styles.css" text="¡Bienvenido al Sistema de Gestion Hospitalaria!">
            <font>
               <Font name="System Bold Italic" size="18.0" />
            </font></Label>
            <Label styleClass="home-subtitle" stylesheets="@../../styles.css" text="Seleccione una opción del menú de la izquierda para comenzar.">
            <font>
               <Font name="System Italic" size="16.0" />
            </font></Label>
        </VBox>
    </center>

</BorderPane>
