<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" styleClass="equipment-root" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prototype.controller.EquipmentController">

    <children>

        <!-- TÍTULO -->
        <Label prefHeight="30.0" alignment="TOP_CENTER" prefWidth="549.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" styleClass="equip-title" stylesheets="@../../styles.css" text="GESTION DE EQUIPOS" />
      <HBox alignment="TOP_CENTER" spacing="10" prefHeight="100.0" prefWidth="200.0">
         <children>
      
              <!-- FORMULARIO -->
              <GridPane hgap="10" prefHeight="264.0" prefWidth="832.0" style="-fx-padding: 10;" styleClass="form-box" stylesheets="@../../Stylesview.css" vgap="10">
                  <columnConstraints>
                      <ColumnConstraints />
                      <ColumnConstraints />
                      <ColumnConstraints maxWidth="270.0" minWidth="10.0" prefWidth="118.0" />
                      <ColumnConstraints maxWidth="152.0" minWidth="0.0" prefWidth="152.0" />
                  <ColumnConstraints maxWidth="152.0" minWidth="0.0" prefWidth="152.0" />
                  </columnConstraints>
      
                  <rowConstraints>
                      <RowConstraints />
                      <RowConstraints />
                      <RowConstraints />
                      <RowConstraints />
                      <RowConstraints />
                  </rowConstraints>
      
                  <!-- ========== FILA 0 ========== -->
                  <Label fx:id="equipmentIdLabel" styleClass="form-label" stylesheets="@../../styles.css" text="ID:" />
      
                  <TextField fx:id="equipmentIdTextField" promptText="ID (buscar, actualizar, eliminar)" GridPane.columnIndex="1" />
      
                  <Label fx:id="equipmentTypeLabel" prefHeight="15.0" prefWidth="118.0" styleClass="form-label" stylesheets="@../../styles.css" text="Tipo de Equipo:" GridPane.columnIndex="2" />
      
                  <ComboBox fx:id="equipmentTypeComboBox" prefWidth="150" GridPane.columnIndex="3" />
      
                  <!-- ========== FILA 1 ========== -->
                  <Label fx:id="frecuencyTypeLabel" prefHeight="19.0" prefWidth="166.0" styleClass="form-label" stylesheets="@../../styles.css" text="Frecuencia de Ingreso:" GridPane.rowIndex="1" />
      
                  <ComboBox fx:id="frecuencyTypeComboBox" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label fx:id="equipmentStatusLabel" prefHeight="19.0" prefWidth="340.0" styleClass="form-label" stylesheets="@../../styles.css" text="Estado del Equipo:" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                  <ComboBox fx:id="equipmentStatusComboBox" prefHeight="46.0" prefWidth="340.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      
                  <!-- ========== FILA 2 ========== -->
                  <Label fx:id="serialEquipmentLabel" styleClass="form-label" stylesheets="@../../styles.css" text="Serial:" GridPane.rowIndex="2" />
      
                  <TextField fx:id="serialEquipmentTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
                  <!-- TECH FIELD (OS) -->
                  <Label fx:id="osLabel" text="OS:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      
                  <TextField fx:id="osTextField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      
                  <!-- BIOMEDICAL FIELD (RISK CLASS) — MISMA CELDA QUE OS -->
                  <Label fx:id="riskClassLabel" prefHeight="19.0" prefWidth="121.0" styleClass="form-label" stylesheets="@../../styles.css" text="Clase de Riesgo:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      
                  <TextField fx:id="riskClassTextField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      
                  <!-- ========== FILA 3 ========== -->
                  <Label fx:id="brandEquipmentLabel" styleClass="form-label" stylesheets="@../../styles.css" text="Marca:" GridPane.rowIndex="3" />
      
                  <TextField fx:id="brandEquipmentTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
                  <!-- TECH FIELD (RAM) -->
                  <Label fx:id="ramGBLabel" text="RAM (GB):" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      
                  <TextField fx:id="ramGBTextField" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      
                  <!-- BIOMEDICAL FIELD (CALIBRATION CERT) — MISMA CELDA QUE RAM -->
                  <Label fx:id="calibrationCertLabel" prefHeight="15.0" prefWidth="154.0" styleClass="form-label" stylesheets="@../../styles.css" text="Certificado Calibración:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      
                  <TextField fx:id="calibrationCertTextField" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      
                  <!-- ========== FILA 4 ========== -->
                  <Label fx:id="modelEquipmentLabel" styleClass="form-label" stylesheets="@../../styles.css" text="Modelo:" GridPane.rowIndex="4" />
      
                  <TextField fx:id="modelEquipmentTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <Button fx:id="takePhotoButton" mnemonicParsing="false" onAction="#takePhoto" prefHeight="25.0" prefWidth="171.0" text="Tomar Foto" styleClass="equip-button" stylesheets="@../../styles.css" GridPane.columnIndex="4" />
               <Label fx:id="providerLabel" styleClass="form-label" stylesheets="@../../styles.css" text="Proveedor:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
               <TextField fx:id="providerTextField" GridPane.columnIndex="3" GridPane.rowIndex="4" />
      
              </GridPane>
            <ImageView fx:id="equipment_imageView" fitHeight="150.0" fitWidth="192.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="10" styleClass="equipment-root" stylesheets="@../../styles.css">
            <Button fx:id="createButton" onAction="#handleCreate" styleClass="equip-button" stylesheets="@../../styles.css" text="Crear" />
            <Button fx:id="updateButton" onAction="#handleUpdate" styleClass="equip-button" stylesheets="@../../styles.css" text="Actualizar" />
            <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="equip-button" stylesheets="@../../styles.css" text="Eliminar" />
            <Button fx:id="findByIdButton" onAction="#handleSearch" styleClass="equip-button" stylesheets="@../../styles.css" text="Buscar por ID" />
            <Button fx:id="cleanFormButton" onAction="#handleClear" styleClass="equip-button" stylesheets="@../../styles.css" text="Limpiar Formulario" />
        </HBox>

        <!-- ESTADO -->
        <Label fx:id="statusLabel" style="-fx-text-fill: blue; -fx-padding: 5;" />

        <!-- TABLA -->
        <TableView fx:id="cursoTable" styleClass="table-row-cell" stylesheets="@../../styles.css" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                <TableColumn fx:id="frequencyTypeColumn" text="FrecuenciaIngreso" />
                <TableColumn fx:id="serialEquipmentColumn" text="Serial" />
                <TableColumn fx:id="equipmentBrandColumn" text="Marca" />
                <TableColumn fx:id="equipmentModelColumn" text="Modelo" />
                <TableColumn fx:id="equipmentTypeColumn" text="TipoEquipo" />
                <TableColumn fx:id="equipmentStateColumn" text="EstadoEquipo" />
                <TableColumn fx:id="osColumn" text="OS" />
                <TableColumn fx:id="ramGBColumn" text="RAM (GB)" />
                <TableColumn fx:id="riskClassColumn" text="Riesgo" />
                <TableColumn fx:id="calibracionCertColumn" text="Certificación" />
            <TableColumn fx:id="path_image" text="path image" />
            <TableColumn fx:id="providerId" prefWidth="75.0" text="Id Provider" />
            </columns>
        </TableView>

    </children>
</VBox>
